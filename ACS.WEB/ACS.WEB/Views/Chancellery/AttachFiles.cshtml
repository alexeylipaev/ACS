@model ACS.WEB.ViewModel.FileRecordChancelleryViewModel

@{
    ViewBag.Title = "Прикрепить файлы";
    Layout = "~/Views/Shared/_LayoutCancelaria.cshtml";
}

<h2>Прикрепить файлы</h2>


@using (Html.BeginForm("AddFiles", "Chancellery", new { ChancelleryId = @ViewBag.ChancelleryId }, FormMethod.Post, new { enctype = "multipart/form-data"}))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @*<h4>FileRecordChancelleryViewModel</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
       
     

        <div class="form-group">
            @Html.LabelFor(model => model.Path, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
               <input type="file" name="Files"  required id="Files" multiple/>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Прикрепить файлы" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Назад к списку", "Index")
</div>
