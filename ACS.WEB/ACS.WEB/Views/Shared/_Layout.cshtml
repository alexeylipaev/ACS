<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ACS.WEB</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ACS WEB", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Главная", "Index", "Home")</li>*@
                    <li>@Html.ActionLink("Работники", "Index", "Employees")</li>
                    <li>@Html.ActionLink("Доступы", "Index", "Accesses")</li>
                    <li>@Html.ActionLink("Учетные записи", "Index", "ApplicationUsers")</li>
                    <li>@Html.ActionLink("Роли пользователей", "Index", "ApplicationRoles")</li>
                    <li>@Html.ActionLink("Техподдержка", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @*с помощью этого метода в это место будет подставляться разметка уже конкретных представлений.*@
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ACS WEB</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/Chosen/chosen.jquery.min.js")
    @RenderSection("scripts", required: false)
</body>
</html>
